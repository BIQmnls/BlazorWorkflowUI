@page "/"
@using BlazorWorkflowUI.Models
@inject IWorkflowService WorkflowService

<MudPaper Class="pa-4">
    <MudTextField @bind-Value="_workflow.Name" Label="Workflow Name" Variant="Variant.Filled" Class="mb-2" />
    <MudTextField @bind-Value="_workflow.Trigger.ActivityType" Label="Trigger" Variant="Variant.Filled" Class="mb-2" />
    <MudTextField @bind-Value="_workflow.Trigger.Condition" Label="Condition" Variant="Variant.Filled" Class="mb-4" />

    <MudDivider Class="mb-4" />
    <MudText Typo="Typo.h6">Steps</MudText>
    <MudTable Items="_workflow.Steps" Class="mb-2">
        <HeaderContent>
            <MudTh>Activity</MudTh>
            <MudTh>Delay (s)</MudTh>
            <MudTh>Branches (IDs)</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd><MudTextField @bind-Value="context.ActivityType" /></MudTd>
            <MudTd><MudNumericField @bind-Value="context.DelaySeconds" /></MudTd>
            <MudTd><MudTextField @bind-Value="context.Branches" /></MudTd>
        </RowTemplate>
    </MudTable>
    <MudButton OnClick="AddStep" Variant="Variant.Filled" Color="Color.Primary" Class="mb-4">Add Step</MudButton>

    <MudDivider Class="mb-4" />
    <MudButton OnClick="Generate" Variant="Variant.Filled" Color="Color.Secondary" Class="mb-2">Generate JSON</MudButton>
    <MudTextArea Value="@_json" Lines="10" ReadOnly="true" Class="mt-2" />
</MudPaper>

@code {
    private WorkflowModel _workflow = new();
    private string? _json;

    void AddStep() => _workflow.Steps.Add(new StepModel());

    void Generate() => _json = WorkflowService.GenerateJson(_workflow);
}
